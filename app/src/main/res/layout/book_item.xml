<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="80dp">
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" android:id="@+id/bookName"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" android:id="@+id/bookPrice"/>

</LinearLayout>